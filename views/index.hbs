<div class="row justify-content-around">
  <div class="col-4">
    <div class="mainImg" id="mainImg">
      <img src="/image-bags/Model3-Beige.JPG" alt="Model3" class="Model3"/>
      <div class="forUploading" id="forUploading">
        {{#if image}}
              <div class="wrapper-img-domnload">
                  <img class="image-download" src="downloadImg/{{image}}" alt="" class="img-download">
              </div>
          {{/if}}
        <div id="container">
          
        </div>
      </div>
    </div>
    <div class="totalPrice">
      <h2>Стоимость:</h2>
    </div>
  </div>

  <div class="col-4">
    <h2>Конструктор</h2>
    <div class="title">Выберите модель</div>
    <div class="wrapper-images">
      <div id="Model1" class="image">
        <img src="/image-bags/Model1_Beige.JPG" alt="Model1" class="Model1"/>
      </div>
      <div id="Model2" class="image">
        <img src="/image-bags/Model2-Beige.JPG" alt="Model2" class="Model2"/>
      </div>
      <div id="Model3" class="image">
        <img src="/image-bags/Model3-Beige.JPG" alt="Model3" class="Model3"/>
      </div>
    </div>
    <div class="title">Выберите цвет</div>
    <select name="selectColor" id="selectColor">
      {{#each uniqueColors}}
        <option value="{{this}}">{{this}}</option>
      {{/each}}
      {{! <option value="White">White</option>
      <option value="Black">Black</option>
      <option value="Red">Red</option> }}
    </select>
    <div class="title">Выберите размер</div>
    <select name="selectSize" id="selectSize">
      {{#each uniqueSizes}}
        <option value="">{{this}}</option>
      {{/each}}
    </select>
    <div class="title">Выберите материал</div>
    <form action="">
      {{#each materialsFromDB}}

        <label>
          <div class="aboutMaterial">
            <b>{{this.name}}</b>
            {{this.description}}
          </div>
          <input type="radio" />
        </label>

      {{/each}}
    </form>
    <div class="col-4 block-dowmload-img" id="containerAddConva">
      <input id="addTxt" type="text">
      <button class="addText" id="addText" type="button">Добавить текст</button>
    <div class="wrapper-form">
        <h2 class="title-upload">Загрузка изображения</h2>
        
        <form method="POST" class="form-params-upload" enctype="multipart/form-data" name="downloadImg">
            <input data type="file" name="image" class="form-input-params">
            <input type="submit" value="download img" class="form-input-params">
        </form>
    </div>
    
  </div>
</div>
  </div>
</div>
